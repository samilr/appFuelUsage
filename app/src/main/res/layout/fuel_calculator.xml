<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:windowSoftInputMode="adjustResize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7EA3CC"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <androidx.cardview.widget.CardView
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="340dp"
                android:background="@color/card"
                app:cardBackgroundColor="@color/card"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="DATOS"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/txt7"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="129dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/white"
                    android:hint="CONSUMO:"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/txbKmLitro"
                    android:layout_width="102dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="120dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/white"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/spUnit"
                    android:layout_width="112dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="126dp"
                    android:popupBackground="@color/card" />

                <TextView
                    android:id="@+id/txt8"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="178dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/white"
                    android:hint="PRECIO:"
                    android:layout_marginBottom="20dp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/txbPrice"
                    android:layout_width="102dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="170dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/white"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/spGasUnity"
                    android:layout_width="112dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="178dp"
                    android:popupBackground="@color/card" />

                <TextView
                    android:id="@+id/txt6"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="80dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/white"
                    android:hint="DISTANCIA:"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/txbDistancia"
                    android:layout_width="102dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="70dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/white"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/spDistancia"
                    android:layout_width="112dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="76dp"
                    android:popupBackground="@color/card" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="334dp"
                android:layout_height="277dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="@color/card"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/txtResultados"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:text="RESULTADOS"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="177dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="60dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/newColor"
                    android:hint="CONSUMO EN KM/G:"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"

                    android:textColorHint="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txbKMG"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="60dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/newColor"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="177dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="100dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/newColor"
                    android:hint="CONSUMO EN MI/G:"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txbMPG"
                    android:layout_width="140dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="100dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/newColor"
                    android:hint=""
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="177dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="140dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/newColor"
                    android:hint="CONSUMO EN KM/L:"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txbKPL"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="140dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/newColor"
                    android:hint=""
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="177dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="180dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/newColor"
                    android:hint="GASOLINA USADA:"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txbCombustibleUsado"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="180dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/newColor"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="177dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="220dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/newColor"
                    android:hint="DINERO USADO:"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txbDineroGastado"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="220dp"
                    android:width="30dp"
                    android:height="10dp"
                    android:backgroundTint="@color/newColor"
                    android:hint=""
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18dp" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnCalcular"
                android:layout_width="161dp"
                android:layout_height="61dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="585dp"
                android:onClick="calculateFuelUsed"
                android:text="CALCULAR"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnReiniciar"
                android:layout_width="161dp"
                android:layout_height="61dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="585dp"
                android:onClick="restartApp"
                android:text="REINICIAR"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPdf"
                android:layout_width="334dp"
                android:layout_height="61dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="645dp"
                android:onClick="makePdf"
                android:text="PDF"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </FrameLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>